{
	"name": "starter-node",
	"version": "1.0.0",
	"description": "",
	"main": "./dist/index.js",
	"scripts": {
		"dev": "concurrently \"npm run dev:ts\" \"nodemon build/dev/index.js\"",
		"dev:ts": "parcel src/index.ts --out-dir ./build/dev --target node",
		"build": "parcel build src/index.ts --out-dir ./build/dist --no-source-maps --target node",
		"ts": "tsc --noEmit --pretty --noImplicitAny",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"concurrently": "^6.2.0",
		"nodemon": "^2.0.7",
		"parcel-bundler": "^1.12.5",
		"prettier": "^2.3.1",
		"typescript": "^4.3.2"
	}
}
